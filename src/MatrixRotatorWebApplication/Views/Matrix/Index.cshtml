@model MatrixRotatorWebApplication.Models.Matrix<int?>

@{
    ViewData["Title"] = "Matrix";
}

<h2>Matrix</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <caption>Source matrix</caption>
        @Html.LabelFor(m => m.Size)
        @Html.TextBoxFor(m => m.Size)
        <tbody>
        @for (var i = 0; i < Model.Size; i++)
        {
            <tr>
                @for (var j = 0; j < Model.Size; j++)
                {
                    var element = Model.Elements[i, j];
                    var htmlAttributes = new Dictionary<string, object> {{"Name", $"elements[{i}, {j}]"}};
                    <td>
                        @Html.TextBoxFor(modelItem => element, htmlAttributes)
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
    <input type="submit" value="Submit" class="btn btn-default" />
}